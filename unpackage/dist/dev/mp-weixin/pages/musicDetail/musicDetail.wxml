<block wx:if="{{newSongDetail.al}}"><view class="main"><view class="bag" style="{{('background-image: url('+newSongDetail.al.picUrl+');')}}"></view><navigator data-event-opts="{{[['tap',[['back',['$event']]]]]}}" class="back" bindtap="__e"><image src="https://i.niupic.com/images/2021/09/14/9ANn.png"></image></navigator><view class="song_title"><view class="song_name">{{newSongDetail.name}}</view><view class="song_artist">{{newSongDetail.ar[0].name}}</view></view><view class="record"><view class="{{['player_con',isPlaying?'playing':'']}}"><image class="play_bar" src="https://i.niupic.com/images/2021/09/13/9ywn.png" mode="widthFix"></image><image class="disc autoRotate" src="https://i.niupic.com/images/2021/09/13/9ywg.png" mode="widthFix"></image><image class="cover autoRotate" src="{{newSongDetail.al.picUrl}}"></image></view></view><navigator class="comment_wrap" url="{{'/pages/musicComment/musicComment?id='+newSongDetail.id}}"><view class="comment_item"><view class="comment_icon"><image src="https://i.niupic.com/images/2021/09/13/9zny.png"></image></view><view class="comment_title">评论</view></view></navigator><view class="slider_item"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="slider_playing" bindtap="__e"><image src="{{isPlaying?pause_icon:play_icon}}"></image></view><view class="slider"><slider value="{{myAudioPos}}" block-size="12" activeColor="#fff" data-event-opts="{{[['change',[['slider_change',['$event']]]]]}}" bindchange="__e"></slider><view class="slider_time"><view class="current-time">{{audioCurrent}}</view><view class="duration-time">{{audioDuration}}</view></view></view></view></view></block>