
view,
text {
	box-sizing: border-box;
}
.tabs_title {
	position: fixed;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 10rpx 0;
	height: 80rpx;
	width: 100%;
	z-index: 7;
background-color: #fff;
margin-top: 20rpx;
}
.title_item {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	text-align: center;
	font-size: 30rpx;
	height: 80rpx;
	line-height: 80rpx;
	background-color: #ffffff;
	border-bottom: 4rpx solid rgba(243, 243, 243, 0.8);
}
.active {
	font-weight: 600;
	color: #d43c33;
	border-bottom: 4rpx solid #d43c33;
}
.tabs_content {
	padding-top: 110rpx;
